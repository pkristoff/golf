<%= field_set_tag Fieldset::Show::SHOW, class: 'fieldset' do %>
  <div id="fieldset-div" class="fieldset-field-div">
    <div id="subheading-div" class="fieldset-field-div">
      <%= render 'performances/subheading', course: course, tee: tee %>
    </div>
    <% avg_score = performance.average_score_totals %>
    <% if avg_score.size == 0 %>
      <p> No rounds for tee </p>
    <% else %>
      <table id=<%= "holes-#{tee.id}" %> style="width:100%">
        <% # Holes %>
        <tr id=<%= "hole-number-#{tee.id}" %>>
          <td id=<%= "hole-number-heading-#{tee.id}" %> class="heading-cell">Number:</td>
          <% avg_score.each_with_index do |averageScore, index| %>
            <% hole = averageScore.hole %>
            <% hole_val = hole.nil? ? nil : hole.number %>
            <% hole_val = 'out' if hole_val.nil? && index < 11 %>
            <% hole_val = 'in' if hole_val.nil? && index == 19 %>
            <% hole_val = 'tot' if hole_val.nil? && index == 20 %>
            <td id='hole-number-<%= hole_val %>' class="number-cell"><%= hole_val %></td>
          <% end %>
        </tr>
        <% # Strokes %>
        <tr id=<%= "strokes-#{tee.id}" %> >
          <td id=<%= "strokes-heading-#{tee.id}" %> class="heading-cell">Avg Strokes:</td>
          <% avg_score.each_with_index do |averageScore, index| %>
            <% strokes = averageScore.strokes %>
            <td id='strokes-<%= index %>' class="number-cell"><%= strokes %></td>
          <% end %>
        </tr>
        <% # putts %>
        <tr id=<%= "putts-#{tee.id}" %> >
          <td id=<%= "putts-heading-#{tee.id}" %> class="heading-cell">Avg Putts:</td>
          <% avg_score.each_with_index do |averageScore, index| %>
            <% putts = averageScore.putts %>
            <td id='putts-<%= index %>' class="number-cell"><%= putts %></td>
          <% end %>
        </tr>
      </table>
    <% end %>

  </div>
<% end # field_set %>
