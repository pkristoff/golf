<h2>Course: <%= @course.name %></h2>
<h2>Tee: <%= @tee.color %></h2>
<h2>Hole: <%= @hole.number %></h2>

<%= render 'share/error_messages.html.erb', resource: @tee %>

<%= render "holes/holes", tee: @tee, holes: holes %>

<% is_new = @hole.new_record? %>

<%= field_set_tag Fieldset::Holes::HOLE, class: 'fieldset' do %>
  <%= form_with model: [@course, @tee, @hole], local: true do |hole_form| %>
    <%= hole_form.label :number, Label::Hole::NUMBER %>
    <%= hole_form.text_field :number, disabled: true %>
    <%= hole_form.label :yardage, Label::Hole::YARDAGE %>
    <%= hole_form.number_field :yardage, disabled: @hole.new_record? , autofocus: true %>
    <%= hole_form.label :par, Label::Hole::PAR %>
    <%= hole_form.number_field :par, disabled: @hole.new_record? %>
    <%= hole_form.label :hdcp, Label::Hole::HDCP %>
    <%= hole_form.number_field :hdcp, disabled: @hole.new_record? %>

    <%= hole_form.submit unless is_new %>
  <% end %>

<% end %>