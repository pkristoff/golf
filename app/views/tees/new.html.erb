<h2>New tee:</h2><%# Rails flash messages styled for Bootstrap 3.0 %>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

<%= render 'share/error_messages.html.erb', resource: @tee %>

<%=render "tees/tees", tees: @course.sorted_tees %>

<h2>Add a tee:</h2>

<%= form_with model: [@course, @tee], local: true  do |tee_form| %>
  <p>
    <%= tee_form.label :color %>
    <%= tee_form.text_field :color%>
    <%= tee_form.label :slope %>
    <%= tee_form.number_field :slope %>
    <%= tee_form.label :rating %>
    <%= tee_form.number_field :rating %>
    <%= label_tag :number_of_holes, 'Number of holes' %>
    <%= number_field_tag :number_of_holes, 18 %>
  </p>
  <%= tee_form.submit %>
  </p>
<% end %>
<%= button_to 'Edit Course', edit_course_path(@course), method: :get %>