<h2>Edit tee</h2>

<% if @tee.present? && @tee.errors.any? %>
  <div id="error_explanation">
    <h2>Validation errors prohibited this tee from being saved:</h2>
  </div>
<% end %>

<h2>Add a tee:</h2>

<%=render "tees/tees", tees: @course.sorted_tees %>

<%= form_with model: [@course, Tee.new], local: true  do |tee_form| %>
  <p>
    <%= tee_form.label :color %>
    <%= tee_form.text_field :color%>
    <%= tee_form.label :slope %>
    <%= tee_form.text_field :slope %>
    <%= tee_form.label :rating %>
    <%= tee_form.text_field :rating %>
    <%= label_tag :number_of_holes, 'Number of holes' %>
    <%= text_field_tag :number_of_holes, 18 %>
  </p>
  <%= tee_form.submit %>
  </p>
<% end %>
<%= button_to 'Edit Course', edit_course_path(@course), method: :get %>